<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clipToPadding="false"
    android:background="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/building_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_building"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/building_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:text="Ломоносово"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/building_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/building_image"/>

    <TextView
        android:id="@+id/building_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:text="Ломоносово, abacba д4"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/building_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/building_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>
